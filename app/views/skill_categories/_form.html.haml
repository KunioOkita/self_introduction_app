= form_for @skill_category, html:{class: "form-group"} do |f|
  - if @skill_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@skill_category.errors.count, "error")} prohibited this skill_category from being saved:"
      %ul
        - @skill_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, {class: "form-control"}
  .actions
    = f.submit 'Save', {class: "btn btn-primary"}
