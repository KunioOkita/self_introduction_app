%h1.mt-2 自己紹介登録

= form_with(model: @user_self_introduction, class: "form-horizontail") do |f|
  #erros
  .form-group
    = f.label :self_image
    = f.file_field :self_image, class: "form-control-file"
  .form-group
    = f.label :birth_place
    = f.text_field :birth_place, class: "form-control"
  .form-group
    = f.label :birth_month
    = f.select :birth_month, 1..12, {prompt: true, selected: @user_self_introduction.birth_month}, {class: "form-control"}
  .form-group
    = f.label :birth_day
    = f.select :birth_day, 1..31, {prompt: true, selected: @user_self_introduction.birth_day}, {class: "form-control"}
  .form-group
    = f.label :hobby
    = f.text_field :hobby, class: "form-control"
  .form-group
    = f.label :introduction
    = f.text_field :introduction, class: "form-control"
  = f.submit class: "btn btn-primary"
