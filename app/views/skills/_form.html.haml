= form_for @skill, html:{class: "form-group"} do |f|
  - if @skill.errors.any?
    #error_explanation
      %h2= "#{pluralize(@skill.errors.count, "error")} prohibited this skill from being saved:"
      %ul
        - @skill.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, {class: "form-control"}
  .field
    = f.label :skill_category
    = f.collection_select :skill_category_id, SkillCategory.all, :id, :name, {prompt: true}, {class: "form-control"}
  .actions
    = f.submit 'Save', {class: "btn btn-primary"}
